@model IEnumerable<VolleyballGear.Models.Product.ProductIndexVM>
@{
    ViewData["Title"] = "Home Page";
}
@section Styles {
        <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="home-hero">
    <h1>Welcome to VolleyGear</h1>
    <p>Your Ultimate Destination for Premium Volleyball Equipment</p>

    <div class="home-content-wrapper">
        <!-- Left Side: Browse Card -->
        <div class="browse-card" onclick="location.href='@Url.Action("Index", "Product")'">
            <div class="browse-icon">🏐</div>
            <h3>Browse Products</h3>
            <p>Explore our wide selection of professional volleyball equipment and gear.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">View All Products</a>
        </div>

        <!-- Right Side: Top Products -->
        <div class="top-products-section">
            <h2>⭐ Top Sold Products</h2>
            <div class="top-products-grid">
                @foreach (var product in Model)
                {
                     <div class="product-card-home">
                            <img src="@product.Picture" alt="@product.ProductName">
                            <hr />
                            <div class="product-info-home">
                                <h3>@product.ProductName</h3>
                                <p><strong>Brand:</strong> @product.BrandName</p>
                                <p><strong>Category:</strong> @product.CategoryName</p>
                                <p><strong>Quantity:</strong> @product.Quantity</p>

                            @if (product.HasDiscount)
                            {
                                        <div class="price-section">
                                            <strong>Price:</strong>
                                            <span class="original-price">@product.Price lv.</span>
                                            <span class="discount-price">@product.PriceWithDiscount lv.</span>
                                        </div>
                                        <p><strong>Discount: </strong>@product.Discount%</p>
                            }
                            else
                            {
                                        <div class="price-section">
                                            <strong>Price:</strong>
                                            <span class="regular-price">@product.Price lv.</span>
                                        </div>
                            }
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>
</div>