@using Microsoft.AspNetCore.Identity
@using VolleyballGear.Data.Domain
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <li><a asp-controller="Product" asp-action="Index">Products</a></li>

    @if (User.IsInRole("Administrator"))
    {
                <li><a asp-controller="Order" asp-action="Index">All Orders</a></li>
    }

        <li><a asp-controller="Order" asp-action="MyOrders">My Orders</a></li>

        <li class="cart-badge">
            <a asp-controller="ShoppingCart" asp-action="Index">
                🛒 Cart
            @if (ViewBag.CartCount != null && ViewBag.CartCount > 0)
            {
                        <span class="cart-count">@ViewBag.CartCount</span>
            }
            </a>
        </li>

        <li>
            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" style="display: inline;">
                <button type="submit" class="nav-btn">Logout (@User.Identity.Name)</button>
            </form>
        </li>
}
else
{
        <li><a asp-controller="Product" asp-action="Index">Products</a></li>
        <li><a href="#" onclick="openLoginModal(); return false;">Login</a></li>
        <li><a href="#" onclick="openRegisterModal(); return false;">Register</a></li>
}
